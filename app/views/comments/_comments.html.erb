<div class="right-info-comments">
  <h4>Make a new comment:</h4>
  <%= form_for [@user, @new_comment] do |f| %>
    <%= f.text_field :content %>
    <%= f.hidden_field :event_id, :value => @event.id if @event %>
    <%= f.submit "Comment!", class: 'button' %>
  <% end %>
  <h4>Comments:</h4>
  <ul>
    <% if @comments.present? %>
      <% @comments.each do |comment| %>
        <li><%= comment.content %> : by <%= link_to comment.user.name, user_path(comment.user) %></li>
      <% end %>
    <% else %>
      <li>
        No comments yet!
      </li>
    <% end %>
  </ul>
</div>
