<%= link_to schedule.event.name, event_path(schedule.event) %><%= ' | How you are getting there ' + schedule.transportation if schedule.transportation != '--' %>

<%= form_for schedule do |f| %>
  <%= f.label :transportation %>
  <%= f.select :transportation, Transportation::TYPE, :selected => schedule.match_transportation %>
  <%= f.submit 'Transport', class: 'button' %>
<% end %>
