<div class="right-info" id="event-<%= event.id %>">
  <h4>
    <strong><%= link_to event.name, event_path(event) %> by <%= link_to event.organizer.name, user_path(event.organizer) %></strong>
  </h4>
  <p>
    <strong>Location:</strong> <%= event.location %>
  </p>
  <div id="event-<%= event.id %>-detail">

  </div>
  
  <button class="js-more button" data-id="<%= event.id %>">More Info</button>
  <p>
    <%= link_to 'Edit this event', edit_event_path(event), class: 'button' if user_signed_in? %>
  </p>
</div>
