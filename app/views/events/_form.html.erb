<%= form_for @event do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :location %><br>
  <%= f.text_field :location %><br>
  <%= f.label :start_time %><br>
  <%= f.datetime_select :start_time, :ampm => true, :min => DateTime.now, :default => DateTime.now %><br>
  <%= f.label :end_time %><br>
  <%= f.datetime_select :end_time, :ampm => true, :min => DateTime.now, :default => DateTime.now + 15.minutes %><br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>

  <p>
  <h4>Make a new Tag:</h4>
  <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
   <%= f.fields_for :tags, @event.tags.build do |tag_fields| %>
    <%= tag_fields.text_field :name %>
  <% end %>
  </p>
  <%= f.submit 'Submit', :class => 'button confirm' %>
  <p>
    <%= button_to "Cancel this Event", event_path(@event), :method => :delete, class: 'button cancel' if policy(@event).destroy? %></li>
  </p>
<% end %>
