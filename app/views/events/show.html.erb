<%= render @event %>

<div class="right-info">
  <h4><%= 'Attender'.pluralize(@users.count) %> of this Event:</h4>
  <p>
    <% @users.each do |attender| %>
      <% if attender.name? %>
        <%= link_to attender.name, user_path(attender) %>
      <% else %>
        <%= link_to attender.email, user_path(attender) %>
      <% end %>
    <% end %>
  </p>
  <p>
      <%= form_tag schedules_path, method: 'POST' do %>
        <%= hidden_field_tag :user_id, current_user.id %>
        <%= hidden_field_tag :event_id, @event.id %>
        <%= submit_tag "Go to this event" %>
      <% end %>
      <%=  button_to "Not going anymore", {:controller => :schedules, :action => 'destroy', :user_id => current_user.id }, :event_id => @event.id, :method => :delete unless @users.nil? %>
  </p>
</div>
